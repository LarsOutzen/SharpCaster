<Window x:Class="WpfCastAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCastAnalyzer"
        mc:Ignorable="d"
        Title="Chrome Caste Analyzer" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <ComboBox  Name="SelectCastDevice"   DisplayMemberPath="Name" Height="20" Margin="5,5,0,0" MinWidth="150"/>
            <Button x:Name="RefreshDevices" Content="Reload Dev"  Click="RefreshDevices_Click" />
        </StackPanel>
        <local:ChromecastView DataContext="{Binding SelectedItem, ElementName=SelectCastDevice}" Margin="0"/>
    </DockPanel>
</Window>
