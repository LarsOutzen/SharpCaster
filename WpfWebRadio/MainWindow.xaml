<Window x:Class="WpfWebRadio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfWebRadio"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Unloaded="Window_Unloaded">
    <DockPanel>
        <ComboBox DockPanel.Dock="Top" Name="SelectCastDevice" MinHeight="30" SelectionChanged="SelectCastDevice_SelectionChanged" DisplayMemberPath="Name"/>
        <TextBox DockPanel.Dock="Bottom" Name="Status" ></TextBox>
        <WrapPanel Name="StationPanel">
            <Button Name="StopBtn" Click="StopBtn_Click" MinWidth="60" MinHeight="60" Content="Stop"/>
        </WrapPanel>
    </DockPanel>
</Window>
